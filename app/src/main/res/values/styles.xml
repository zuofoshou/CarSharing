<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--备用的AppTheme-->
    <!--去掉标题栏的正确方式-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--Light主题下，设置Menu的文字颜色是白色-->
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">50dp</item>
        <!--标题栏的颜色-->
        <item name="android:colorPrimary">@color/toolbar_bg</item>
        <!--导航栏的颜色-->
        <item name="android:colorPrimaryDark">@color/toolbar_bg</item>
        <!--对应ET编辑时、RadioButton选中、CheckBox等选中的颜色-->
        <item name="android:colorAccent">@color/toolbar_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--底部导航栏三按钮样式-->
    <style name="main_rb_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/selector_main_rb_text</item>
        <item name="android:background">@color/app_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    
    <!--布局中的分割线-->
    <style name="divier_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divier_color</item>
    </style>

    <!--自定义dialog-->
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>


    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
